<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:padding="1dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
        >
        

        <LinearLayout
            
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_navi_meter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            	android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:text=""
                android:textColor="#00BAFF"
                android:textSize="18dp" />

            
            
            <ImageView
                android:id="@+id/iv_navi_leftright"
                android:layout_width="50dp"
                android:layout_height="50dp"
                 />
        </LinearLayout>
        
        
    </LinearLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/duimg" />
    
    <TextView
        android:id="@+id/tv_niavi_do"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:text=""
        android:textColor="#00BAFF"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_marginTop="20dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/person" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/udimg" />
    
    <TextView
        android:id="@+id/tv_navi_tofrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:text=""
        android:textColor="#00BAFF"
        android:textSize="22dp" />
    
    <TextView
        android:id="@+id/tv_navi_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        />
    
</LinearLayout>